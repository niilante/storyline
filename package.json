{
  "name": "storyline",
  "version": "1.0.0",
  "description": "Storyline is a tool for journalists to provide narrative context to readable line charts in a form which is optimized for the mobile user experience.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NUKnightLab/storyline.git"
  },
  "author": "Divya Sasidharan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NUKnightLab/storyline/issues"
  },
  "homepage": "https://github.com/NUKnightLab/storyline#readme",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "http-server": "^0.9.0",
    "ncp": "^2.0.0",
    "node-sass": "^3.8.0",
    "parallelshell": "^2.0.0",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "chai-as-promised": "^6.0.0",
    "chokidar": "^1.6.0",
    "cssmin": "^0.4.3",
    "csv-parse": "^1.1.9",
    "d3-axis": "^1.0.5",
    "d3-scale": "^1.0.4",
    "d3-selection": "^1.0.4",
    "d3-time-format": "^2.0.5",
    "es6-promise": "^4.0.5",
    "exit-hook": "^1.1.1",
    "fs-extra": "^0.30.0",
    "globby": "^5.0.0",
    "hammerjs": "^2.0.8",
    "json-loader": "^0.5.4",
    "lodash.throttle": "^4.1.1",
    "moment": "^2.17.1",
    "mustache": "^2.3.0",
    "prompt": "^1.0.0",
    "pubsub-js": "^1.5.4",
    "rimraf": "^2.5.3",
    "shelljs": "^0.7.0",
    "simple-git": "^1.67.0",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "stream-transform": "^0.1.1",
    "tiny-lr": "^0.2.1",
    "xhr-stream": "^1.1.0"
  },
  "scripts": {
    "start": "parallelshell 'webpack --watch' 'npm run watch' 'npm run server'",
    "prestart": "npm run clean && webpack && npm run compile",
    "dist": "webpack -p && npm run compile && node tasks/minify-css.js",
    "clean": "rimraf dist/",
    "watch": "node tasks/watch.js",
    "server": "http-server ./dist -c-1",
    "compile": "npm run copy && npm run sass",
    "copy": "ncp src/index.html dist/index.html --stopOnErr && ncp src/assets dist/assets --stopOnErr",
    "sass": "node-sass -o dist/css -q --output-style compact src/scss/",
    "test": "mocha --compilers js:babel-core/register --require babel-polyfill './test/*-test.js'",
    "stage": "node tasks/stage.js"
  }
}
